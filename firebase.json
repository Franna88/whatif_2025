{
    "functions": {
        "source": "functions",
        "runtime": "nodejs18",
        "memory": "2GB"
    },
    "hosting": {
        "public": "build/web",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/panelbeaters-directory/:id/profile",
                "function": "generateStaticProfile",
                "region": "us-central1",
                "pinTag": true,
                "conditions": [
                    {
                        "header": "user-agent",
                        "pattern": ".*(bot|crawler|spider).*",
                        "caseSensitive": false
                    }
                ]
            },
            {
                "source": "/generateStaticProfile/:id",
                "function": "generateStaticProfile",
                "region": "us-central1"
            },
            {
                "source": "/sitemap.xml",
                "function": "generateSitemap",
                "region": "us-central1"
            },
            {
                "source": "**/*.{js,css,png,jpg,jpeg,gif,ico,html}",
                "destination": "/build/web/:1"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "cleanUrls": true,
        "trailingSlash": false,
        "priority": "function",
        "headers": [
            {
                "source": "**",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-cache, no-store, must-revalidate"
                    },
                    {
                        "key": "X-Robots-Tag",
                        "value": "all"
                    },
                    {
                        "key": "google-site-verification",
                        "value": "YlOO70vPUqg7J4cW"
                    }
                ]
            }
        ]
    }
}